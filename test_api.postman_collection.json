							"        \"Country\": { \"type\": \"String\" },\r",
							"        \"CountryCode\": { \"type\": \"String\" },\r",
							"        \"Province\": { \"type\": \"String\" },\r",
							"        \"City\": { \"type\": \"String\" },\r",
							"        \"CityCode\":{ \"type\": \"String\" },\r",
							"        \"Lat\": { \"type\": \"String\" },\r",
							"        \"Lon\":{ \"type\": \"String\" },\r",
							"        \"Confirmed\": { \"type\": \"integer\" },\r",
							"        \"Deaths\": { \"type\": \"integer\" },\r",
							"        \"Recovered\": { \"type\": \"integer\" },\r",
							"        \"Active\": { \"type\": \"integer\" },\r",
							"        \"Date\": { \"type\": \"String\" },\r",
							"    \r",
							"    \r",
							"    }\r",
							"};\r",
							"tv4.addSchema('CovidSchema', covidSchema);\r",
							"pm.test('Covid schema is valid', function() {\r",
							"  pm.expect(tv4.validate(pm.response.json(), schema)).to.be.true;\r",
